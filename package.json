{
  "name": "bpmn-desktop-app",
  "version": "1.0.0",
  "description": "Easy Tool to manipulate BPMN files",
  "main": "electron-main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:start": "npm run build && electron .",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.bpmn.desktop",
    "productName": "BPMN Editor",
    "files": [
      "dist/**/*",
      "electron-main.js",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false
    }
  },
  "keywords": [],
  "author": "Eleving Group",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "bpmn-js": "^18.9.1",
    "diagram-js-minimap": "^5.2.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "vite": "^7.2.7",
    "vite-plugin-pwa": "^1.2.0"
  },
  "dependencies": {
    "bpmn-js-color-picker": "^0.7.2"
  }
}
